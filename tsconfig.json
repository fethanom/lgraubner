{
  "compilerOptions": {
    "module": "ES2015",
    "lib": ["es6", "dom"],
    "declaration": true,
    "target": "es5",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "watch": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
